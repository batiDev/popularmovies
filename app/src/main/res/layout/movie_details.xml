<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="2dp"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_gravity="start"
        >

        <ImageView
            android:id="@+id/detail_movie_image"
            android:layout_width="@dimen/detail_image_width"
            android:layout_height="@dimen/detail_image_height"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:paddingLeft="@dimen/abc_button_padding_horizontal_material"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="2">

            <!-- reviews -->
            <Button
                android:id="@+id/detail_reviews"
                android:layout_width="wrap_content"
                android:textColor="@color/primary_color"
                android:text="Reviews"
                android:onClick="launchReviews"
                android:layout_height="wrap_content"/>

            <!-- release date -->
            <TextView
                android:padding="2dp"
                android:id="@+id/detail_movie_release_date"
                android:layout_width="wrap_content"
                android:textSize="@dimen/release_date_text"
                android:layout_height="wrap_content"/>

            <!-- rating -->
            <LinearLayout
                android:padding="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:padding="2dp"
                    android:id="@+id/detail_movie_vote_average_label"
                    android:text="@string/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:padding="2dp"
                    android:id="@+id/detail_movie_vote_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic|bold"
                    android:textColor="@color/primary_color"/>

            </LinearLayout>

            <!-- favorite star -->
            <ImageButton
                android:padding="2dp"
                android:id="@+id/detail_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setFavorite"
                android:background="#00ffffff" />

        </LinearLayout>

    </LinearLayout>

    <!-- overview text content -->
    <TextView
        android:padding="@dimen/default_padding"
        android:id="@+id/detail_movie_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
